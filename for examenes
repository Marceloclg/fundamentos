#include <iostream>

using namespace std;

int main()
{   int n, e1, e2, e3, p, p1, p2, p3;
    cout<<"Ingrese la cantidad de alumnos: ";cin>>n;
    for (int i=1;i<=n;i++)
    {
        cout<<"Ingrese la nota del examen 1 del alumno "<<i<<" : ";cin>>e1;
        cout<<"Ingrese la nota del examen 2 del alumno "<<i<<" : ";cin>>e2;
        cout<<"Ingrese la nota del examen 3 del alumno "<<i<<" : ";cin>>e3;
        p= ((e1+e2+e3)/3);
        if (i==1)
        p1= p;
        if (i==2)
        p2=p;
        if (i==3)
        p3=p;
    }
    system("clear");
    cout<<"El promedio del alumno 1 es de: "<<p1<<endl;
    cout<<"El promedio del alumno 2 es de: "<<p2<<endl;
    cout<<"El promedio del alumno 3 es de: "<<p3<<endl;
    
    return 0;
}
